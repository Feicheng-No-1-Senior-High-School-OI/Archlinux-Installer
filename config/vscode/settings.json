{
    "workbench.colorTheme": "Adapta Nokto",
    "vim.disableAnnoyingNeovimMessage": true,
    "editor.minimap.enabled": false,
    "files.autoSave": "on",
    "workbench.panel.location": "bottom",
    "terminal.integrated.fontFamily": "Droid Sans Mono for Powerline",
    "terminal.integrated.fontSize": 13.5,
    "workbench.startupEditor": "newUntitledFile",
    "java.errors.incompleteClasspath.severity": "ignore",
    "vim.hlsearch": true,
    "window.zoomLevel": 0,
    //  latex
    "latex-workshop.latex.toolchain": [
        {
            // "command": "xelatex",
            "command": "lualatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        }
    ],
    //  markdown
    "markdown-preview-enhanced.previewTheme": "github-light.css",
    "markdown-checkbox.withBulletPoint": true,
    "markdown-checkbox.typeOfBulletPoint": "-",
    "markdown-checkbox.strikeThroughWhenChecked": true,
    "markdown-checkbox.dateWhenChecked": true,
    //  for matlab
    // "matlab.mlintpath": "/home/si9ma/matlab/bin/glnxa64/mlint",
    // "git.autofetch": true,
    // "workbench.iconTheme": "material-icon-theme"
}